{
  "name": "miniapp-template",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://github.com/Mister-Hope/miniapp-template",
  "bugs": {
    "url": "https://github.com/Mister-Hope/miniapp-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mister-Hope/miniapp-template.git"
  },
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mrhope.site"
  },
  "type": "module",
  "scripts": {
    "build": "gulp -f gulpfile.cjs build",
    "changelog": "standard-version --skip.bump --skip.commit --skip.tag",
    "clean": "node scripts/del.js",
    "commit": "pnpm git-cz",
    "dev": "gulp -f gulpfile.cjs watch",
    "lint": "pnpm lint:prettier --write && pnpm lint:wxs --write && pnpm lint:wxml --write && pnpm lint:eslint --fix && pnpm lint:stylelint --fix",
    "lint:check": "pnpm lint:prettier && pnpm lint:wxs && pnpm lint:wxml && pnpm lint:eslint && pnpm lint:stylelint",
    "lint:eslint": "eslint --ext .ts,.wxs .",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint **/*.scss",
    "lint:wxml": "prettier --check --parser html **/*.wxml",
    "lint:wxs": "prettier --check --parser babel-flow **/*.wxs",
    "package:check-update": "pnpm dlx npm-check-updates -u --deep",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,json,yaml,yml,md}": "prettier --write",
    "*.wxss": "stylelint --fix",
    "*.wxml": "prettier --parser html --write",
    "*.wxs": "prettier --parser babel-flow --write",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@mr-hope/gulp-sass": "3.1.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "commitizen": "4.3.0",
    "cz-git": "1.6.1",
    "del": "7.0.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "gulp": "4.0.2",
    "gulp-rename": "2.0.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "miniprogram-api-typings": "3.11.0",
    "npm-check-updates": "16.10.12",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "sort-package-json": "2.4.1",
    "standard-version": "9.5.0",
    "stylelint": "15.7.0",
    "stylelint-config-hope": "3.0.0",
    "typescript": "5.1.3"
  },
  "packageManager": "pnpm@8.6.1",
  "pnpm": {
    "overrides": {
      "cacache": "^17.0.5",
      "chokidar": "^3.5.3",
      "css": "npm:@adobe/css-tools@^4.2.0",
      "glob-parent": "^6.0.2",
      "glob-stream": "^7.0.0",
      "micromatch": "^4.0.5",
      "yargs-parser": "^21.1.1"
    }
  }
}
