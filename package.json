{
  "name": "miniapp-template",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "app/",
    "cloud/*"
  ],
  "scripts": {
    "build": "gulp build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "commit": "pnpm cz",
    "postinstall": "husky install",
    "lint": "pnpm lint:prettier --write && pnpm lint:wxs --write && pnpm lint:wxml --write && pnpm lint:eslint --fix && pnpm lint:style --fix",
    "lint:check": "pnpm lint:prettier && pnpm lint:wxs && pnpm lint:wxml && pnpm lint:eslint && pnpm lint:style",
    "lint:eslint": "eslint --ext .ts,.wxs .",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint **/*.scss",
    "lint:wxml": "prettier --check --parser html **/*.wxml",
    "lint:wxs": "prettier --check --parser babel-flow **/*.wxs",
    "watch": "gulp watch"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,json,yaml,.md}": "prettier --write",
    "*.wxss": "stylelint --fix",
    "*.wxml": "prettier --parser html --write",
    "*.wxs": "prettier --parser babel-flow --write",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@mr-hope/gulp-sass": "3.0.2",
    "@types/node": "17.0.42",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "commitizen": "4.2.4",
    "conventional-changelog-cli": "2.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "gulp": "4.0.2",
    "gulp-rename": "2.0.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.1",
    "miniprogram-api-typings": "3.5.0",
    "npm-check-updates": "13.1.5",
    "postcss": "8.4.14",
    "prettier": "2.6.2",
    "sort-package-json": "1.57.0",
    "stylelint": "14.9.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "26.0.0",
    "stylelint-config-standard-scss": "4.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.2.0",
    "typescript": "4.7.3"
  },
  "packageManager": "pnpm@7.2.1"
}
